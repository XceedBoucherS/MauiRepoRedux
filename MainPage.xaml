<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mauiRepoRedux="clr-namespace:MauiRepoRedux"
             x:Class="MauiRepoRedux.MainPage">

    <Grid RowDefinitions="Auto, *">
        <Label
            Grid.Row="0"
            Text="{x:Bind Text}"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1" />
        <CollectionView ItemsSource="{x:Bind Items, IsItemsSource=True}" Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid HeightRequest="{x:Bind Height}" BackgroundColor="{x:Bind Color}">
                        <Label Padding="15" 
                               VerticalOptions="Center" 
                               HorizontalOptions="Center" 
                               Text="{x:Bind Name}"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>
